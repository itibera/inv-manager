<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!--Main Site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter"><a href="/"><i class="fas fa-angle-double-left"></i>All products</a></div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Product</h2>
                <span class="text-light">Use the form to update an account</span>
            </div>
            <!-- add product form-->
            <!--form handling-->
            <form method="POST" id="update_product">
                <div class="new_product">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%= product._id %>">
                        <input type="text" name="name" value="<%= product.name%>" placeholder="WHITEGLOW SERUM">
                    </div>
                    <div class="form-group">
                        <label for="Quantity" class="text-light">Quantity</label>
                        <input type="number" name="quantity" value="<%= product.quantity%>" placeholder="10">
                    </div>
                    <div class="form-group">
                        <label for="Price" class="text-light">Price</label>
                        <input type="number" name="price" value="<%= product.price%>" placeholder="â‚¹425">
                        

                    </div>
                    <div class="form-group">
                        <label for="Supplier" class="text-light">Supplier Name</label>
                        <input type="text" name="supplier" value="<%= product.supplier%>" placeholder="Mark Stoenis">
                        

                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>
        </div>
    </main>
    <!--/Main Site-->


    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->